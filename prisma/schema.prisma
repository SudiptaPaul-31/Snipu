generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Snippet {
  id         Int        @id @default(autoincrement())
  title      String
  code       String
  language   String
  authorId   String
  tags       String
  createdAt  DateTime   @default(now())
  comments   Comment[]
  author     User       @relation(fields: [authorId], references: [id])
  bookmarks  Bookmark[] // âœ… fixed indentation and placement
}

// Add this model to your schema.prisma file
model UserBookmark {
  id            Int      @id @default(autoincrement())
  walletAddress String   // The user's wallet address
  snippetId     Int      // The ID of the bookmarked snippet
  createdAt     DateTime @default(now())

  @@unique([walletAddress, snippetId]) // Prevents duplicate bookmarks
  @@index([walletAddress]) // Improves query performance for user's bookmarks
}

model User {
  id            String    @id @default(uuid())
  walletAddress String    @unique
  username      String    @unique
  bio           String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  snippets      Snippet[]
  comments      Comment[]
  bookmarks     Bookmark[]
}

model Comment {
  id         Int       @id @default(autoincrement())
  content    String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  authorId   String
  snippetId  Int
  author     User      @relation(fields: [authorId], references: [id])
  snippet    Snippet   @relation(fields: [snippetId], references: [id], onDelete: Cascade)
}
